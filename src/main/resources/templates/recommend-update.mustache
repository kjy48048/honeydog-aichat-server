{{>layout/header}}
<h1>게시글 수정</h1>
<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="id">글번호</label>
                <input type="text" class="form-control" id="id" value="{{recommend.id}}" readonly>
            </div>
            <div class="form-group">
                <label for="nick">닉네임</label>
                <input type="text" class="form-control" id="nick" value="{{recommend.nick}}">
            </div>
            <div class="form-group">
                <label for="question">질문</label>
                <input type="text" class="form-control" id="question" value="{{recommend.question}}" readonly>
            </div>
            <div class="form-group">
                <label for="color">색깔</label>
                <input type="text" class="form-control" id="color" value="{{recommend.color}}">
            </div>
            <div class="form-group">
                <label for="orderIndex">순서</label>
                <input type="text" class="form-control" id="orderIndex" value="{{#recommend.orderIndex}}{{recommend.orderIndex}}{{/recommend.orderIndex}}">
            </div>
            <a href="/" role="button" class="btn btn-secondary">취소</a>
            <button type="button" class="btn btn-primary" id="btn-update">수정 완료</button>
            <button type="button" class="btn btn-danger" id="btn-delete">삭제</button>
        </form>
    </div>
</div>

<!--index.js 추가 -->
<script src="/js/app/recommend.js"></script>
{{>layout/footer}}
